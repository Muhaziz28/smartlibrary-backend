// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Mahasiswa {
  nim              String  @id
  nama             String
  email            String  @unique
  usernameTelegram String? @unique @map("username_telegram")
  noTelp           String? @unique @map("no_telp")
  prodi            Prodi?  @relation(fields: [prodiId], references: [id])
  prodiId          Int?    @map("prodi_id")

  @@map("mahasiswa")
}

enum Role {
  ADMIN
  MAHASISWA
  DOSEN
}

model User {
  id        Int    @id @default(autoincrement())
  username  String @unique
  password  String
  role      Role
  jurusanId Int?   @map("jurusan_id")

  @@map("users")
}

model Dosen {
  nip              String   @id
  nama             String   @unique
  email            String   @unique
  usernameTelegram String?  @unique @map("username_telegram")
  noTelp           String?  @unique @map("no_telp")
  fakultas         Fakultas @relation(fields: [fakultasId], references: [id])
  fakultasId       Int      @map("fakultas_id")

  @@map("dosen")
}

model Fakultas {
  id           Int     @id @default(autoincrement())
  namaFakultas String  @unique @map("nama_fakultas")
  singkatan    String? @unique
  Dosen        Dosen[]

  @@map("fakultas")
}

model Prodi {
  id        Int         @id @default(autoincrement())
  namaProdi String      @unique @map("nama_prodi")
  singkatan String?     @unique
  Mahasiswa Mahasiswa[]

  @@map("prodi")
}
