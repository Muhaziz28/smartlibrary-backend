// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Mahasiswa {
  nim              String  @id
  nama             String
  email            String  @unique
  usernameTelegram String? @unique @map("username_telegram")
  noTelp           String? @unique @map("no_telp")

  @@map("mahasiswa")
}

enum Role {
  ADMIN
  MAHASISWA
  DOSEN
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  role      Role
  jurusan   Jurusan? @relation(fields: [jurusanId], references: [id])
  jurusanId Int?     @map("jurusan_id")

  @@map("users")
}

model Fakultas {
  id           Int       @id @default(autoincrement())
  namaFakultas String    @unique @map("nama_fakultas")
  singkatan    String?   @unique
  Jurusan      Jurusan[]
}

model Jurusan {
  id          Int      @id @default(autoincrement())
  namaJurusan String   @unique @map("nama_jurusan")
  singkatan   String?  @unique
  fakultas    Fakultas @relation(fields: [fakultasId], references: [id])
  fakultasId  Int      @map("fakultas_id")
  User        User[]
}
